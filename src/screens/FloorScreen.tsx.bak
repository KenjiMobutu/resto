import React, { useEffect, useState } from 'react';
import {
  View,
  Text,
  StyleSheet,
  ScrollView,
  TouchableOpacity,
  Dimensions,
  Alert,
} from 'react-native';
import { useAuthStore } from '../stores/authStore';
import { useFloorStore } from '../stores/floorStore';
import { useWaitlistStore } from '../stores/waitlistStore';
import { TableComponent } from '../components/floor/TableComponent';
import { FloorElementComponent } from '../components/floor/FloorElementComponent';
import { Table, TableStatus } from '../types';

const { width: SCREEN_WIDTH, height: SCREEN_HEIGHT } = Dimensions.get('window');

export const FloorScreen = ({ route, navigation }: any) => {
  const user = useAuthStore((state) => state.user);
  const tables = useFloorStore((state) => state.tables);
  const elements = useFloorStore((state) => state.elements);
  const loading = useFloorStore((state) => state.loading);
  const fetchFloor = useFloorStore((state) => state.fetchFloor);
  const updateTablePosition = useFloorStore((state) => state.updateTablePosition);
  const deleteTable = useFloorStore((state) => state.deleteTable);
  const changeTableStatus = useFloorStore((state) => state.changeTableStatus);
  const updateElementPosition = useFloorStore((state) => state.updateElementPosition);
  const deleteElement = useFloorStore((state) => state.deleteElement);
  const removeFromWaitlist = useWaitlistStore((state) => state.removeFromWaitlist);

  const [editMode, setEditMode] = useState(false);

  // ParamÃ¨tres de navigation pour attribution de table depuis waitlist
  const { mode, waitlistId, partySize } = route.params || {};

  useEffect(() => {
    if (user?.restaurant_id) {
      fetchFloor(user.restaurant_id);
    }
    // eslint-disable-next-line react-hooks/exhaustive-deps
  }, [user?.restaurant_id]);

  const handleTablePositionChange = async (tableId: string, x: number, y: number) => {
    await updateTablePosition(tableId, { x, y });
  };

  const handleElementPositionChange = async (elementId: string, x: number, y: number) => {
    await updateElementPosition(elementId, { x, y });
  };

  const handleTablePress = (table: Table) => {
    // Si on est en mode attribution (depuis waitlist)
    if (mode === 'assign' && waitlistId) {
      if (table.status !== 'available') {
        Alert.alert('Table indisponible', 'Cette table n\'est pas disponible');
        return;
      }

      Alert.alert(
        'Confirmer l\'attribution',
        \`Attribuer la table \${table.number} (\${table.capacity} personnes) ?\`,
        [
          { text: 'Annuler', style: 'cancel' },
          {
            text: 'Confirmer',
            onPress: async () => {
              // Marquer la table comme occupÃ©e
              await changeTableStatus(table.id, TableStatus.OCCUPIED);
              // Retirer de la waitlist
              await removeFromWaitlist(waitlistId);
              Alert.alert('SuccÃ¨s', 'Table attribuÃ©e avec succÃ¨s', [
                { text: 'OK', onPress: () => navigation.navigate('Waitlist') }
              ]);
            }
          }
        ]
      );
    }
  };

  const handleDeleteTable = async (tableId: string) => {
    const { error } = await deleteTable(tableId);
    if (error) {
      Alert.alert('Erreur', 'Impossible de supprimer la table');
    }
  };

  const handleDeleteElement = async (elementId: string) => {
    const { error } = await deleteElement(elementId);
    if (error) {
      Alert.alert('Erreur', 'Impossible de supprimer l\'Ã©lÃ©ment');
    }
  };

  const handleStatusChange = async (tableId: string, status: TableStatus) => {
    const { error } = await changeTableStatus(tableId, status);
    if (error) {
      Alert.alert('Erreur', 'Impossible de changer le statut');
    }
  };

  const handleAddTable = () => {
    navigation.navigate('AddTable');
  };

  const handleAddElement = () => {
    navigation.navigate('AddElement');
  };

  return (
    <View style={styles.container}>
      <View style={styles.header}>
        <View>
          <Text style={styles.title}>
            {mode === 'assign' ? 'Choisir une table' : 'Plan de salle'}
          </Text>
          {mode === 'assign' && partySize && (
            <Text style={styles.subtitle}>Pour {partySize} personne{partySize > 1 ? 's' : ''}</Text>
          )}
        </View>
        <View style={styles.headerButtons}>
          {mode === 'assign' && (
            <TouchableOpacity
              style={styles.cancelButton}
              onPress={() => navigation.goBack()}
            >
              <Text style={styles.cancelButtonText}>Annuler</Text>
            </TouchableOpacity>
          )}
          {!mode && (
            <TouchableOpacity
              style={[styles.editButton, editMode && styles.editButtonActive]}
              onPress={() => setEditMode(!editMode)}
            >
              <Text style={[styles.editButtonText, editMode && styles.editButtonTextActive]}>
                {editMode ? 'âœ“ Terminer' : 'âœŽ Modifier'}
              </Text>
            </TouchableOpacity>
          )}
        </View>
      </View>

      <ScrollView
        style={styles.scrollView}
        contentContainerStyle={styles.floorContainer}
        horizontal
        showsHorizontalScrollIndicator={false}
        showsVerticalScrollIndicator={false}
      >
        <ScrollView
          style={styles.verticalScroll}
          showsVerticalScrollIndicator={false}
        >
          <View style={styles.floor}>
            {/* Ã‰lÃ©ments de dÃ©coration */}
            {elements.map((element) => (
              <FloorElementComponent
                key={element.id}
                element={element}
                editable={editMode}
                onPositionChange={(x, y) => handleElementPositionChange(element.id, x, y)}
                onDelete={handleDeleteElement}
              />
            ))}

            {/* Tables */}
            {tables.map((table) => (
              <TableComponent
                key={table.id}
                table={table}
                editable={editMode}
                onPositionChange={(x, y) => handleTablePositionChange(table.id, x, y)}
                onPress={handleTablePress}
                onDelete={handleDeleteTable}
                onStatusChange={handleStatusChange}
              />
            ))}

            {tables.length === 0 && !loading && (
              <View style={styles.empty}>
                <Text style={styles.emptyText}>Aucune table configurÃ©e</Text>
                <TouchableOpacity
                  style={styles.addButton}
                  onPress={handleAddTable}
                >
                  <Text style={styles.addButtonText}>+ Ajouter une table</Text>
                </TouchableOpacity>
              </View>
            )}
          </View>
        </ScrollView>
      </ScrollView>

      {editMode && (
        <View style={styles.footer}>
          <TouchableOpacity
            style={styles.addTableButton}
            onPress={handleAddTable}
          >
            <Text style={styles.addTableButtonText}>ðŸª‘ Ajouter une table</Text>
          </TouchableOpacity>
          <TouchableOpacity
            style={styles.addElementButton}
            onPress={handleAddElement}
          >
            <Text style={styles.addElementButtonText}>ðŸ“¦ Ajouter un Ã©lÃ©ment</Text>
          </TouchableOpacity>
        </View>
      )}

      {!editMode && (
        <View style={styles.legend}>
          <View style={styles.legendItem}>
            <View style={[styles.legendColor, { backgroundColor: '#10B981' }]} />
            <Text style={styles.legendText}>Disponible</Text>
          </View>
          <View style={styles.legendItem}>
            <View style={[styles.legendColor, { backgroundColor: '#EF4444' }]} />
            <Text style={styles.legendText}>OccupÃ©e</Text>
          </View>
          <View style={styles.legendItem}>
            <View style={[styles.legendColor, { backgroundColor: '#F59E0B' }]} />
            <Text style={styles.legendText}>RÃ©servÃ©e</Text>
          </View>
          <View style={styles.legendItem}>
            <View style={[styles.legendColor, { backgroundColor: '#6B7280' }]} />
            <Text style={styles.legendText}>Nettoyage</Text>
          </View>
        </View>
      )}
    </View>
  );
};

